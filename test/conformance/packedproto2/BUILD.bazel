
load("@npm//@bazel/jasmine:index.bzl", "jasmine_node_test")
load("@npm//@bazel/typescript:index.bzl", "ts_project")
load("@rules_proto//proto:defs.bzl", "proto_library")
load("//:index.bzl", "ts_proto_library")
load("//tools:diff_and_update.bzl", "diff_and_update")

proto_library(
    name = "protos",
    srcs = glob(["**/*.proto"])
)

ts_proto_library(
    name = "codegen",
    outs = ["packedproto2.ts"],
    deps = [
        ":protos"
    ],
)

diff_and_update(
    name = "diff",
    srcs = ["packedproto2.ts"],
    checked = ["packed_proto2.ts"],
)

ts_project(
    name = "tests",
    srcs = glob(["*.ts"]),
    tsconfig = {}, # no special options
    extends = "//test:tsconfig.json",
    deps = [
        "@npm//@types/jasmine",
        "@npm//@types/node",
        "@npm//@types/google-protobuf",
        "@npm//google-protobuf",
        "@npm//@grpc/grpc-js",
    ],
)

jasmine_node_test(
    name = "test",
    data = glob(["**/*.bin"]),
    tags = ["no-windows-latest"],
    deps = [
        ":tests",
    ],
)
